<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="18dp">

    <TextView
        android:id="@+id/detail_name"
        android:textColor="#FF444444"
        android:shadowColor="#44000000"  
        android:shadowRadius="1.5"  
        android:shadowDx="1"  
        android:shadowDy="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />
    
	<TextView
        android:id="@+id/detail_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:shadowRadius="1.5"  
        android:shadowDx="1"  
        android:shadowDy="1"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:drawableLeft="@drawable/details_row_disabled"
        android:drawablePadding="5dp"
        android:text="N/C"
        />
	
	<TextView
        android:id="@+id/detail_none"
        android:layout_below="@+id/detail_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="#FFAAAAAA"
        android:textSize="5pt"
        android:text="Note ignorÃ©e"
         />
	
	<TextView
        android:id="@+id/detail_description"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/detail_none"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_name"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"  />
	
    
</RelativeLayout>