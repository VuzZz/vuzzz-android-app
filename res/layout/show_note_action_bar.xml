<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBar"
    style="@style/ActionBarCompat"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_compat_height"
    orientation="vertical" >

    <LinearLayout
        android:id="@android:id/home"
        android:layout_width="@dimen/actionbar_compat_button_home_width"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_holo_light"
        android:contentDescription="Retour à la home"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_ab_back_holo_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_home" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleView"
        style="@style/ActionBarCompatTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="@dimen/actionbar_compat_button_width"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_holo_light"
        android:contentDescription="Partager"
        android:scaleType="center"
        android:src="@drawable/ic_menu_share_holo_light" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="@dimen/actionbar_compat_button_width"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_holo_light"
        android:contentDescription="Paramètres"
        android:scaleType="center"
        android:src="@drawable/ic_menu_settings_holo_light" />

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="@dimen/actionbar_compat_button_width"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_holo_light"
        android:contentDescription="Paramètres"
        android:scaleType="center"
        android:src="@drawable/ic_menu_help_holo_light" />

</LinearLayout>